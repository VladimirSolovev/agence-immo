{% extends 'base.html.twig' %}

{% block title %} Gérer les options{% endblock %}
{% block body %}
    <div class="container mt-4">
        <h1>Gérer les options</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        <table class="table table-stripped">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% if options %}
            {% for option in options %}
                <tr>
                    <td>{{ option.name | truncate(30, true) }}</td>
                    <td>
                        <a href="{{ path('admin.option.edit', {id: option.id}) }}" class="btn btn-secondary">Editer</a>
                        <form method="post" action="{{ path("admin.option.delete", {id: option.id}) }}" style="display: inline-block;"
                              onsubmit="return confirm('Voulez-vous vraiment supprimer ce bien?');">
                            <input type="hidden" name="_token" value="{{ csrf_token("delete" ~ option.id) }}">
                            <input type="hidden" name="_method" value="DELETE">
                            <button class="btn btn-danger">Supprimer</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
            {% else %}
            <p>Aucune option existe</p>
            {% endif %}
            </tbody>
        </table>

        <div class="text-right">
            <a href="{{ path("admin.option.new") }}" class="btn btn-primary">Créer un nouveau bien</a>
        </div>

    </div>
{% endblock %}